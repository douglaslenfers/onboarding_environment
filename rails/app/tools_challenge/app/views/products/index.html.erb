<h1>Lista de produtos</h1>

<%= form_tag(products_path, :method => "get") do %>
<div>
  <%= search_field_tag :search, params[:search], placeholder: "Digite um SKU, nome ou descrição", class: "search_field" %>
  <%= button_tag "Filtrar", :name => nil %>
</div>
<% end %>

<table id="product_table">
  <thead>
    <tr>
      <th>SKU</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Quantidade</th>
      <th>Preço</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.SKU %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Visualizar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Remover', product, method: :delete, data: { confirm: 'Tem certeza que deseja remover?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_product_path %>
